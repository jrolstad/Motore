@model Motore.Library.Models.ReportWizard.Assumptions
<div class="reportWizardStep">
@using (Html.BeginForm("SetAssumptions", "ReportWizard", FormMethod.Post, new { id = "SetAssumptionsForm" }))
{
	<h2>Set Assumptions</h2>
	<div class="fileUpload">
		Review the following assumptions.
		<p />
		<table border="0" cellpadding="0" cellspacing="0">
			<tr>
				<td valign="top" align="left">Your marginal income tax rate:</td>
				<td valign="top" align="left">
					<input type="text" name="marginalTaxRate" value="28%" />
				</td>
			</tr>
		</table>
		<input type="text" name="postedFile" id="transactionFile" />
	</div>
	<div class="buttons">
		<button type="submit">Continue</button>
	</div>
	<input type="hidden" name="StepNumber" value="@Model.StepNumber" />
	<input type="hidden" name="Token" value="@Model.Token" />
}
</div>