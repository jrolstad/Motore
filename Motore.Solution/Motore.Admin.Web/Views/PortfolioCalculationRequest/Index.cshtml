@model List<Motore.Library.Models.Portfolio.PortfolioCalculationRequestViewModel>
@{
    ViewBag.Title = "Portfolio Calculation Requests";
}

<h2>Portfolio Calculation Requests</h2>

@if (Model.Count <= 0)
{
    <h3>No requests were found.</h3>
}
else
{
    <div>
        <table>
            <tr>
                <td class="header">ID</td>
                <td class="header">Date</td>
                <td class="header">File</td>
                <td class="header">Status</td>
                <td>&nbsp;</td>
            </tr>
            @foreach (var request in Model)
            {
                <tr>
                    <td class="data">@request.RequestId</td>
                    <td class="data">@request.RequestDateString</td>
                    <td class="data">@request.PortfolioFileInfo</td>
                    <td class="data">@request.Status</td>
                    <td class="data">
                        @Html.ActionLink("details", "Details", "PortfolioCalculationRequest", new { id = request.RequestId }, null)
                        &nbsp;
                        @Html.ActionLink("details", "Delete", "PortfolioCalculationRequest", new { id = request.RequestId }, new { @class = "delete" })
                    </td>
                </tr>
            }
        </table>

    </div>
}